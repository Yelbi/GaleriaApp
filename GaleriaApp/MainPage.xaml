<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:GaleriaApp.Converters"
             x:Class="GaleriaApp.MainPage"
             Title="Mi Galería de Medios">
    <ContentPage.Resources>
        <converters:StringEqualConverter x:Key="StringEqualConverter" />
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*,Auto">
        <Label Text="Mi Galería de Medios"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,10,0,10" />
        <CollectionView Grid.Row="1"
                        x:Name="MediaCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnMediaSelected">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5"
                            Padding="0"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}">
                        <Grid RowDefinitions="*,Auto">
                            <!-- Imagen con indicador de video si es necesario -->
                            <Grid>
                                <Image Source="{Binding Path}"
                                       Aspect="AspectFill"
                                       HeightRequest="150" />
                                <!-- Icono de video si es aplicable -->
                                <Image IsVisible="{Binding Type, Converter={StaticResource StringEqualConverter}, ConverterParameter='Video'}"
                                       Source="play_icon.png"
                                       HeightRequest="40"
                                       WidthRequest="40"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Grid>
                            <!-- Título con tipo de archivo -->
                            <StackLayout Grid.Row="1"
                                         Padding="5">
                                <Label Text="{Binding Title}"
                                       LineBreakMode="TailTruncation" />
                                <Label Text="{Binding Type}"
                                       FontSize="Small"
                                       TextColor="Gray" />
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center"
                             HorizontalOptions="Center">
                    <Label Text="No hay medios disponibles"
                           FontSize="18"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Usa los botones de abajo para añadir fotos o videos"
                           FontSize="14"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
        <HorizontalStackLayout Grid.Row="2"
                               HorizontalOptions="Center"
                               Spacing="10"
                               Margin="0,10,0,20">
            <Button Text="Seleccionar Foto"
                    Clicked="OnSelectPhotoClicked" />
            <Button Text="Seleccionar Video"
                    Clicked="OnSelectVideoClicked" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>