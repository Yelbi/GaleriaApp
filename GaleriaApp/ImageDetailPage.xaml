<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaApp.ImageDetailPage"
             Title="Detalle de Imagen"
             BackgroundColor="Black">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Compartir"
                     Clicked="OnShareClicked" />
        <ToolbarItem Text="Eliminar"
                     Clicked="OnDeleteClicked" />
        <ToolbarItem Text="Rotar"
                     Clicked="OnRotateClicked" />
    </ContentPage.ToolbarItems>
    <Grid>
        <!-- PinchGestureRecognizer para zoom -->
        <ScrollView x:Name="ImageScrollView"
                    Orientation="Both"
                    HorizontalScrollBarVisibility="Never"
                    VerticalScrollBarVisibility="Never"
                    MinimumZoomScale="0.5"
                    MaximumZoomScale="4">
            <Image x:Name="DetailImage"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <PinchGestureRecognizer PinchUpdated="OnPinchUpdated" />
                    <TapGestureRecognizer Tapped="OnDoubleTapped"
                                          NumberOfTapsRequired="2" />
                </Image.GestureRecognizers>
            </Image>
        </ScrollView>
        <!-- Botones de control con mejor diseño -->
        <Grid RowDefinitions="*,Auto"
              VerticalOptions="Fill">
            <StackLayout Grid.Row="1"
                         VerticalOptions="End"
                         HorizontalOptions="Center"
                         Orientation="Horizontal"
                         Spacing="15"
                         Margin="0,10,0,20"
                         BackgroundColor="#80000000"
                         Padding="15,10">
                <Button Text="Compartir"
                        Clicked="OnShareClicked"
                        Style="{StaticResource PrimaryButton}" />
                <Button Text="Pantalla completa"
                        Clicked="OnFullScreenClicked"
                        Style="{StaticResource PrimaryButton}" />
                <Button Text="Eliminar"
                        Clicked="OnDeleteClicked"
                        Style="{StaticResource DangerButton}" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>