<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaApp.ImageDetailPage"
             Title="Detalle de Imagen"
             BackgroundColor="Black">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Compartir"
                     Clicked="OnShareClicked" />
        <ToolbarItem Text="Eliminar"
                     Clicked="OnDeleteClicked" />
    </ContentPage.ToolbarItems>
    <Grid>
        <!-- Imagen con capacidad de desplazamiento -->
        <ScrollView x:Name="ImageScrollView"
                    Orientation="Both"
                    HorizontalScrollBarVisibility="Never"
                    VerticalScrollBarVisibility="Never">
            <Image x:Name="DetailImage"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </ScrollView>
        <!-- Botones de control -->
        <StackLayout VerticalOptions="End"
                     HorizontalOptions="Center"
                     Orientation="Horizontal"
                     Spacing="10"
                     Margin="0,10,0,20">
            <Button Text="Compartir"
                    Clicked="OnShareClicked" />
            <Button Text="Eliminar"
                    Clicked="OnDeleteClicked"
                    BackgroundColor="Red"
                    TextColor="White" />
        </StackLayout>
    </Grid>
</ContentPage>