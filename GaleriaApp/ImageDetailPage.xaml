<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaApp.ImageDetailPage"
             Title="Detalle de Imagen"
             BackgroundColor="Black">
    <Grid>
        <!-- Imagen con gestos básicos -->
        <ScrollView x:Name="ImageScrollView">
            <Image x:Name="DetailImage"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <PinchGestureRecognizer PinchUpdated="OnPinchUpdated" />
                    <TapGestureRecognizer Tapped="OnDoubleTapped"
                                          NumberOfTapsRequired="2" />
                </Image.GestureRecognizers>
            </Image>
        </ScrollView>
        <!-- Controles básicos -->
        <StackLayout VerticalOptions="End"
                     HorizontalOptions="Center"
                     Orientation="Horizontal"
                     Spacing="10"
                     Margin="0,10,0,20">
            <Button Text="Compartir"
                    Clicked="OnShareClicked" />
            <Button Text="Eliminar"
                    Clicked="OnDeleteClicked"
                    BackgroundColor="Red"
                    TextColor="White" />
        </StackLayout>
    </Grid>
</ContentPage>