<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaApp.ImageDetailPage"
             BackgroundColor="Black"
             NavigationPage.HasBackButton="True">
    <Grid>
        <!-- Imagen principal con pinch gesture-->
        <Image x:Name="DetailImage"
               Aspect="AspectFit"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               BackgroundColor="Black">
            <Image.GestureRecognizers>
                <PinchGestureRecognizer PinchUpdated="OnPinchUpdated" />
                <TapGestureRecognizer NumberOfTapsRequired="2"
                                      Tapped="OnDoubleTapped" />
                <TapGestureRecognizer NumberOfTapsRequired="1"
                                      Tapped="OnSingleTap" />
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            </Image.GestureRecognizers>
        </Image>
        <!-- Overlay de informaciÃ³n -->
        <Frame x:Name="InfoOverlay"
               BackgroundColor="#CC000000"
               Padding="15,10"
               CornerRadius="0"
               HasShadow="False"
               HorizontalOptions="Fill"
               VerticalOptions="Start"
               IsVisible="False">
            <StackLayout>
                <Label x:Name="ImageTitleLabel"
                       Text=""
                       TextColor="White"
                       FontSize="16"
                       FontAttributes="Bold" />
                <Label x:Name="ImageInfoLabel"
                       Text="Info de la imagen"
                       TextColor="LightGray"
                       FontSize="12" />
            </StackLayout>
        </Frame>
        <!-- Controles de imagen -->
        <StackLayout x:Name="ControlsOverlay"
                     VerticalOptions="End"
                     Padding="20"
                     BackgroundColor="#66000000"
                     IsVisible="True">
            <!-- Botones principales -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="20"
                                   Margin="0,10,0,20">
                <Button x:Name="RotateLeftButton"
                        Text="â†º"
                        FontSize="24"
                        Clicked="OnRotateLeftClicked"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="25"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Button x:Name="RotateRightButton"
                        Text="â†»"
                        FontSize="24"
                        Clicked="OnRotateRightClicked"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="25"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Button x:Name="FitButton"
                        Text="â¹"
                        FontSize="20"
                        Clicked="OnFitToScreenClicked"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="25"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Button x:Name="ShareButton"
                        Text="ðŸ“¤"
                        FontSize="20"
                        Clicked="OnShareClicked"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="25"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Button x:Name="DeleteButton"
                        Text="ðŸ—‘"
                        FontSize="20"
                        Clicked="OnDeleteClicked"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="25"
                        WidthRequest="50"
                        HeightRequest="50" />
            </HorizontalStackLayout>
        </StackLayout>
        <!-- Indicador de carga -->
        <Grid x:Name="LoadingOverlay"
              BackgroundColor="#CC000000"
              IsVisible="True">
            <StackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10">
                <ActivityIndicator IsRunning="True"
                                   Color="White"
                                   HeightRequest="50"
                                   WidthRequest="50" />
                <Label Text="Cargando imagen..."
                       TextColor="White"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Grid>
        <!-- BotÃ³n de pantalla completa -->
        <Button x:Name="FullScreenButton"
                Text="â›¶"
                FontSize="20"
                Clicked="OnFullScreenClicked"
                BackgroundColor="#88000000"
                TextColor="White"
                CornerRadius="20"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="15" />
    </Grid>
</ContentPage>