<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GaleriaApp.VideoPlayerPage"
             BackgroundColor="Black"
             NavigationPage.HasBackButton="True">
    <Grid RowDefinitions="*,Auto">
        <!-- Container del reproductor de video -->
        <Border Grid.Row="0"
                BackgroundColor="Black"
                Stroke="Transparent">
            <toolkit:MediaElement x:Name="VideoPlayer"
                                  ShouldAutoPlay="False"
                                  ShouldShowPlaybackControls="False"
                                  Aspect="AspectFit"
                                  ShouldKeepScreenOn="True"
                                  MediaOpened="OnMediaOpened"
                                  MediaEnded="OnMediaEnded"
                                  MediaFailed="OnMediaFailed"
                                  PositionChanged="OnPositionChanged"
                                  StateChanged="OnStateChanged"
                                  HorizontalOptions="Fill"
                                  VerticalOptions="Fill" />
        </Border>
        <!-- Overlay de controles personalizados -->
        <Grid Grid.Row="0"
              x:Name="ControlsOverlay"
              BackgroundColor="Transparent">
            <!-- BotÃ³n de play/pause central -->
            <Button x:Name="CenterPlayButton"
                    Text="â–¶"
                    FontSize="60"
                    TextColor="White"
                    BackgroundColor="#88000000"
                    CornerRadius="40"
                    WidthRequest="80"
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnCenterPlayClicked"
                    IsVisible="True" />
            <!-- Controles superiores -->
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Fill"
                         VerticalOptions="Start"
                         Margin="15,10">
                <Label x:Name="VideoTitleLabel"
                       Text=""
                       TextColor="White"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="Center" />
                <Button x:Name="FullScreenTopButton"
                        Text="â›¶"
                        FontSize="20"
                        TextColor="White"
                        BackgroundColor="#88000000"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnFullScreenClicked" />
            </StackLayout>
        </Grid>
        <!-- Controles inferiores -->
        <StackLayout Grid.Row="1"
                     x:Name="BottomControls"
                     BackgroundColor="#E6000000"
                     Padding="15,10"
                     Spacing="15"
                     IsVisible="True">
            <!-- Barra de progreso -->
            <Grid ColumnDefinitions="Auto,*,Auto"
                  ColumnSpacing="10">
                <Label x:Name="CurrentTimeLabel"
                       Grid.Column="0"
                       Text="00:00"
                       TextColor="White"
                       FontFamily="Monospace"
                       VerticalOptions="Center" />
                <Slider x:Name="ProgressSlider"
                        Grid.Column="1"
                        Maximum="100"
                        Value="0"
                        ThumbColor="#512BD4"
                        MinimumTrackColor="#512BD4"
                        MaximumTrackColor="#444444"
                        ValueChanged="OnProgressChanged"
                        DragStarted="OnProgressDragStarted"
                        DragCompleted="OnProgressDragCompleted" />
                <Label x:Name="TotalTimeLabel"
                       Grid.Column="2"
                       Text="00:00"
                       TextColor="White"
                       FontFamily="Monospace"
                       VerticalOptions="Center" />
            </Grid>
            <!-- Controles de reproducciÃ³n -->
            <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto"
                  ColumnSpacing="10">
                <Button Grid.Column="0"
                        x:Name="RewindButton"
                        Text="âª"
                        FontSize="20"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnRewindClicked" />
                <Button Grid.Column="2"
                        x:Name="PlayPauseButton"
                        Text="â–¶"
                        FontSize="20"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnPlayPauseClicked" />
                <Button Grid.Column="4"
                        x:Name="ForwardButton"
                        Text="â©"
                        FontSize="20"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnForwardClicked" />
                <Button Grid.Column="6"
                        x:Name="FullScreenButton"
                        Text="â›¶"
                        FontSize="16"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnFullScreenClicked" />
            </Grid>
            <!-- Botones adicionales -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="15">
                <Button x:Name="VolumeButton"
                        Text="ðŸ”Š"
                        FontSize="18"
                        BackgroundColor="#666666"
                        TextColor="White"
                        CornerRadius="15"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnVolumeClicked" />
                <Button x:Name="SpeedButton"
                        Text="1x"
                        FontSize="14"
                        BackgroundColor="#666666"
                        TextColor="White"
                        CornerRadius="15"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnSpeedClicked" />
                <Button x:Name="ShareButton"
                        Text="ðŸ“¤"
                        FontSize="16"
                        BackgroundColor="#666666"
                        TextColor="White"
                        CornerRadius="15"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnShareClicked" />
                <Button x:Name="DeleteButton"
                        Text="ðŸ—‘"
                        FontSize="16"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="15"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnDeleteClicked" />
            </HorizontalStackLayout>
        </StackLayout>
        <!-- Indicador de carga -->
        <Grid Grid.Row="0"
              x:Name="LoadingOverlay"
              BackgroundColor="#CC000000"
              IsVisible="True">
            <StackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10">
                <ActivityIndicator IsRunning="True"
                                   Color="White"
                                   HeightRequest="50"
                                   WidthRequest="50" />
                <Label Text="Cargando video..."
                       TextColor="White"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Grid>
        <!-- Overlay de informaciÃ³n del video -->
        <Frame x:Name="VideoInfoOverlay"
               Grid.Row="0"
               BackgroundColor="#CC000000"
               Padding="15"
               CornerRadius="0"
               HasShadow="False"
               HorizontalOptions="Fill"
               VerticalOptions="Start"
               IsVisible="False">
            <StackLayout>
                <Label Text=""
                       TextColor="White"
                       FontSize="18"
                       FontAttributes="Bold" />
                <Label x:Name="VideoInfoLabel"
                       Text="Info del video"
                       TextColor="LightGray"
                       FontSize="14" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>