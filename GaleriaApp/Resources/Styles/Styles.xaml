<!-- Resources/Styles/Styles.xaml actualizado -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Estilos para elementos comunes -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor"
                Value="{StaticResource Background}" />
    </Style>
    <Style TargetType="Label">
        <Setter Property="TextColor"
                Value="{StaticResource Text}" />
        <Setter Property="FontFamily"
                Value="OpenSansRegular" />
    </Style>
    <Style x:Key="CardFrame"
           TargetType="Frame">
        <Setter Property="BackgroundColor"
                Value="{StaticResource CardBackground}" />
        <Setter Property="BorderColor"
                Value="{StaticResource BorderColor}" />
        <Setter Property="CornerRadius"
                Value="12" />
        <Setter Property="HasShadow"
                Value="{OnPlatform Android=true, iOS=false}" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Margin"
                Value="6" />
    </Style>
    <Style x:Key="PrimaryButton"
           TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{StaticResource Primary}" />
        <Setter Property="TextColor"
                Value="White" />
        <Setter Property="FontFamily"
                Value="OpenSansSemibold" />
        <Setter Property="CornerRadius"
                Value="10" />
        <Setter Property="Padding"
                Value="14,10" />
    </Style>
    <Style x:Key="SecondaryButton"
           TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="Transparent" />
        <Setter Property="TextColor"
                Value="{StaticResource Primary}" />
        <Setter Property="BorderColor"
                Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth"
                Value="1" />
        <Setter Property="FontFamily"
                Value="OpenSansSemibold" />
        <Setter Property="CornerRadius"
                Value="10" />
        <Setter Property="Padding"
                Value="14,10" />
    </Style>
    <Style x:Key="DangerButton"
           TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{StaticResource Tertiary}" />
        <Setter Property="TextColor"
                Value="White" />
        <Setter Property="FontFamily"
                Value="OpenSansSemibold" />
        <Setter Property="CornerRadius"
                Value="10" />
        <Setter Property="Padding"
                Value="14,10" />
    </Style>
    <!-- Estilos de tipografía -->
    <Style x:Key="TitleLabel"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{StaticResource Text}" />
        <Setter Property="FontSize"
                Value="28" />
        <Setter Property="FontAttributes"
                Value="Bold" />
        <Setter Property="FontFamily"
                Value="OpenSansSemibold" />
    </Style>
    <Style x:Key="SubtitleLabel"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{StaticResource Text}" />
        <Setter Property="FontSize"
                Value="20" />
        <Setter Property="FontFamily"
                Value="OpenSansSemibold" />
    </Style>
    <Style x:Key="BodyLabel"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{StaticResource Text}" />
        <Setter Property="FontSize"
                Value="16" />
        <Setter Property="FontFamily"
                Value="OpenSansRegular" />
        <Setter Property="LineHeight"
                Value="1.5" />
    </Style>
    <Style x:Key="CaptionLabel"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontFamily"
                Value="OpenSansRegular" />
    </Style>
</ResourceDictionary>