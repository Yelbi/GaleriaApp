<!-- Resources/Styles/Colors.xaml corregido -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Colores Base -->
    <Color x:Key="Primary">#4361EE</Color>
    <Color x:Key="PrimaryDark">#3A56D4</Color>
    <Color x:Key="Secondary">#7209B7</Color>
    <Color x:Key="Tertiary">#F72585</Color>
    <Color x:Key="Accent">#4CC9F0</Color>
    <!-- Colores para tema claro -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightText">#1D1D1D</Color>
    <Color x:Key="LightTextSecondary">#6B6B6B</Color>
    <Color x:Key="LightSurface">#F5F5F5</Color>
    <Color x:Key="LightCard">#FFFFFF</Color>
    <Color x:Key="LightBorder">#E0E0E0</Color>
    <!-- Colores para tema oscuro -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkText">#F5F5F5</Color>
    <Color x:Key="DarkTextSecondary">#AAAAAA</Color>
    <Color x:Key="DarkSurface">#252525</Color>
    <Color x:Key="DarkCard">#2D2D2D</Color>
    <Color x:Key="DarkBorder">#424242</Color>
    <!-- Colores por tema -->
    <AppThemeBinding x:Key="Background"
                     Light="{StaticResource LightBackground}"
                     Dark="{StaticResource DarkBackground}" />
    <AppThemeBinding x:Key="Text"
                     Light="{StaticResource LightText}"
                     Dark="{StaticResource DarkText}" />
    <AppThemeBinding x:Key="TextSecondary"
                     Light="{StaticResource LightTextSecondary}"
                     Dark="{StaticResource DarkTextSecondary}" />
    <AppThemeBinding x:Key="Surface"
                     Light="{StaticResource LightSurface}"
                     Dark="{StaticResource DarkSurface}" />
    <AppThemeBinding x:Key="CardBackground"
                     Light="{StaticResource LightCard}"
                     Dark="{StaticResource DarkCard}" />
    <AppThemeBinding x:Key="BorderColor"
                     Light="{StaticResource LightBorder}"
                     Dark="{StaticResource DarkBorder}" />
</ResourceDictionary>